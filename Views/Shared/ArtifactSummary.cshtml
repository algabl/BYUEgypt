@using BYUEgypt.Infrastructure
@model Artifact
       
       <div class="card border-dark mb-3" style="min-width: 50rem;">
           <div class="card-header">@Model.BurialNumber</div>
           <div class="card-body text-dark">
               <h3 class="card-title">@Model.Name</h3>
               <h6 class="card-title">Age: @Model.AgeAtDeath</h6>
               <div style="width:inherit;">
                   <div class="list-group list-group-flush">
                       <div class="row mb-2 list-group-item-secondary">
                           <div class="col-6 ">Perservation: <b>@Model.Preservation</b></div>
                           <div class="col-6 ">Excavation Recorder: <b>@Model.ExcavationRecorder</b></div>
                       </div>
                       <div class="row mb-2 list-group-item-secondary">
                           <div class="col-4 ">Depth: <b>@Model.Depth</b></div>
                           <div class="col-4 ">Length: <b>@Model.Length</b></div>
                           <div class="col-4 ">Hair Color: <b>@Model.HairColor</b></div>
                       </div>
                       <div class="row mb-2 list-group-item-secondary">
                           <div class="col-12 ">Description: <b>@Model.Text</b></div>
                       </div>
                       <div class="row rounded">
                           <div class="col-3">
                               <div class="d-flex justify-content-center align-items-center list-group-item list-group-item-info">Area: <b>@Model.Area</b></div>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
       </div>

@{
    Layout = null;
}

