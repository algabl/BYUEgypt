@using BYUEgypt.Infrastructure
@model Textile

<a style="all: unset; cursor: pointer;" asp-controller="Home" asp-action="RecordView" asp-route-id="@Model.Id">
    <div class="card border-dark mb-2" style="min-width: 50rem;">
        <div class="card-header d-flex justify-content-end align-items-center">
            <div class="display-8">
                BurialNumber: <i>@Model.Burialnumber</i>
            </div>
        </div>
        <div class="card-body text-dark">
            <h6 class="card-title text-start display-7">
                <div class="row">
                    <div class="col">Locale: @Model.Locale</div>
                    <div class="col d-flex justify-content-end align-items-center">
                        <div class="list-group-item list-group-item-info display-7">
                            Direction: <b> @Model.Direction</b>
                        </div>
                    </div>
                </div>
            </h6>
            <div style="width:inherit;">
                <div class="list-group list-group-flush d-flex">
                    <div class="row mb-4 list-group-item-light h-25">
                        <div class="col-3 text-start display-7">Color: <b>Some Color</b></div>
                        <div class="col-3 text-start display-7">Sample Date: <b>@Model.Sampledate</b></div>
                        <div class="col-3 text-start display-7">Photographed Date: <b>@Model.Photographeddate</b></div>
                        <div class="col-3 text-start display-7">Estimated Period: <b>@Model.Estimatedperiod</b></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</a>
  


