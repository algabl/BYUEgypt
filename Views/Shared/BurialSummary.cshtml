@using BYUEgypt.Infrastructure
@model Burialmain

<a style="all: unset; cursor: pointer;" asp-controller="Home" asp-action="RecordView" asp-route-id="@Model.Id">
    <div class="card border-dark mb-3" style="min-width: 50rem;">
        <div class="card-header d-flex justify-content-end align-items-center">
            <div class="display-8">
                BurialNumber: <i>@Model.Burialnumber</i>
            </div>
        </div>
        <div class="card-body text-dark">

            <div class="row">
                <div class="col-8">
                    <h3 class="card-title text-start">Field Book Page: @Model.Fieldbookpage</h3>
                </div>
                    <div class="col-4 d-flex justify-content-end align-items-center">
                        <div class="list-group-item list-group-item-info display-7">Area: <b> @Model.Area</b></div>
                    </div>
            </div>

            
            <h6 class="card-title text-start display-7">Age at death: @Model.Ageatdeath</h6>
            <div style="width:inherit;">
                <div class="list-group list-group-flush d-flex">
                    <div class="row mb-4 list-group-item-light h-25">
                        <div class="col-3 card-text display-7">
                            Sex: <span class="record-indent">@Model.Sex</span>
                        </div>
                        <div class="col-3 card-text display-7">
                            Hair Color: <span class="record-indent">@Model.Haircolor</span>
                        </div>
                        <div class="col-3 card-text display-7">
                            Wrapping: <span class="record-indent">@Model.Wrapping</span>
                        </div>
                        <div class="col-3 card-text display-7">
                            Age Classification: <span class="record-indent">@Model.Adultsubadult</span>
                        </div>
                    </div>
                    <div class="row mb-4 border-0 list-group-item-light h-25">
                        
                            <div class="col-3 card-text display-7">
                                Depth: <span class="record-indent">@Model.Depth</span>
                            </div>
                        
                        
                            <div class="col-3 card-text display-7">
                                Length: <span class="record-indent">@Model.Length</span>
                            </div>
                        
                        <div class="col-3 card-text display-7">
                            Preservation: <span class="record-indent">@Model.Preservation</span>
                        </div>
                        <div class="col-3 card-text display-7">
                            Head Direction: <span class="record-indent">@Model.Headdirection</span>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</a>
  


