@{
    ViewData["Title"] = "Supervised Analysis";
}

@model Burialmain

<section style="height:70vh;">
    <div class="d-flex justify-content-center align-items-center cairo-font display-7">
        <div class="row m-5">
            <img src="" alt="The Supervised Model">
        </div>
        <div class="row">
            Some description about the Supervised Model
        </div>    
    </div>    
</section>

<section style="height:100vh;">
  <div class="d-flex justify-content-center align-items center w-auto cairo-font">
    <div class="accordion accordion-flush w-75 " id="accordionFlushExample">
        <div class="accordion-item ">
          <h2 class="accordion-header bg-primary text-light display-6">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
              Test your own artifact!
            </button>
          </h2>
          <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
              <div class="accordion-body">
                  <form class="row g-3">
                    <div class="col-md-4">
                      <label class="form-label">Sex</label>
                      <select id="inputState" class="form-select">
                        <option selected>Choose...</option>
                        <option>Female</option>
                        <option>Male</option>
                        <option>Unknown</option>
                      </select>
                    </div>
                    <div class="col-md-4">
                      <label class="form-label">Prservation</label>
                      <select id="inputAdultsubadult" class="form-select">
                        <option selected>Choose...</option>
                        <option value="V">Very Disturbed</option>
                        <option value="B">Badly Preserved</option>
                        <option value="D">Deteriorated</option>
                        <option value="P">Poor</option>
                        <option value="S">Skeletalized</option>
                        <option value="B">Bones in a Jumbled Pile</option>
                        <option value="W">Whole/Great Preservation</option>
                      </select>
                    </div>
                    <div class="col-md-4">
                      <label class="form-label">Area</label>
                      <select id="inputArea" class="form-select">
                        <option selected>Choose...</option>
                        <option>NW</option>
                        <option>SW</option>
                        <option>NE</option>
                        <option>SE</option>
                      </select>
                    </div>
                    <div class="col-md-3">
                      <label class="form-label">Depth</label>
                      <input type="number" class="form-control" id="inputDepth" placeholder="1234 Main St">
                    </div>
                    <div class="col-md-3">
                      <label class="form-label">Depth Indicator</label>
                      <select id="inputDepthIndicator" class="form-select">
                        <option selected>Choose...</option>
                        <option>Greater than ></option>
                        <option>Less than <</option>
                      </select>
                    </div>
                    <div class="col-md-3">
                      <label class="form-label">Length</label>
                      <input type="number" class="form-control" id="inputLength" placeholder="1234 Main St">
                    </div>
                    <div class="col-md-3">
                      <label class="form-label">Length Indicator</label>
                      <select id="inputLengthIndicator" class="form-select">
                        <option selected>Choose...</option>
                        <option>Greater than ></option>
                        <option>Less than <</option>
                      </select>
                      </div>
                    <div class="col-md-6">
                      <label class="form-label">Age at Death</label>
                      <select id="inputAgeatdeath" class="form-select">
                        <option selected>Choose...</option>
                        <option value="A">Adult - years 15+</option>
                        <option value="C">Child - years 3-15</option>
                        <option value="I">Infant - years 1-3</option>
                        <option value="N">Newborn - year 0-1</option>
                        <option value="U">Unknown</option>
                      </select>
                    </div>
                    <div class="col-md-6">
                      <label class="form-label">Wrapping</label>
                      <select id="inputWrapping" class="form-select">
                        <option selected value="">Choose...</option>
                        <option value="W">Full or nearly full wrapping remains</option>
                        <option value="H">Partial wrapping remain</option>
                        <option value="B">Bones and/or only partial remnants of wrapping remains</option>
                        <option value="U">Unknown</option>
                      </select>
                    </div>
                    <div class="col-12">
                      <button type="submit" class="btn btn-primary">Filter</button>
                    </div>
                  </form>
              </div>
          </div>
        </div>
        
      </div>  
  </div>
  

</section>

