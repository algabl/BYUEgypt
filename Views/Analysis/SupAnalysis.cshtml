@{
    ViewData["Title"] = "Supervised Analysis";
}

@model Burialmain

<section style="height:70vh;">
    <div class="d-flex justify-content-center align-items-center cairo-font display-7">
        <div class="row m-5">
            <img src="" alt="The Supervised Model">
        </div>
        <div class="row">
            Some description about the Supervised Model
        </div>    
    </div>    
</section>

<section style="height:100vh;">
  <div class="d-flex justify-content-center align-items center w-auto cairo-font">
    <div class="accordion accordion-flush w-75 " id="accordionFlushExample">
        <div class="accordion-item ">
          <h2 class="accordion-header bg-primary text-light display-6">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
              Test your own artifact!
            </button>
          </h2>
          <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
              <div class="accordion-body">
                <form class="row g-3">
                  @* 1st row *@
                  <div class="col-md-3">
                    <label class="form-label">Square North South</label>
                    <input type="number" class="form-control" id="numberInput" placeholder="Input a Vertical space" min="0" max="200" step="10" onchange="roundToNearestTen()" required>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Square East West</label>
                    <input type="number" class="form-control" id="numberInput" placeholder="Input a Horizontal space" min="0" max="70" step="10" onchange="roundToNearestTen()" required>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Vertical Cardinal Direction</label>
                    <select id="NorthSouth" class="form-select" required>
                      <option selected>Choose...</option>
                      <option value="N">North</option>
                      <option value="S">South</option>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Horizontal Cardinal Direction</label>
                    <select id="EastWest" class="form-select" required>
                      <option selected>Choose...</option>
                      <option value="E">East</option>
                      <option value="W">West</option>
                    </select>
                  </div>
                  
                  @* 2nd row *@
                  <div class="col-md-3" id="Area">
                    <label class="form-label">Area</label>
                    <select id="inputArea" class="form-select" required>
                      <option selected>Choose...</option>
                      <option>NW</option>
                      <option>SW</option>
                      <option>NE</option>
                      <option>SE</option>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Length</label>
                    <input type="number" class="form-control" id="inputLength" placeholder="">
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Depth</label>
                    <input type="number" class="form-control" id="inputDepth" placeholder="" required>
                  </div>
                  <div class="col-md-3">
                    <label asp-for="Wrapping" class="form-label">Wrapping</label>
                    <select asp-for="Wrapping" id="inputWrapping" class="form-select">
                      <option selected value="">Choose...</option>
                      <option value="W">Full or nearly full wrapping remains</option>
                      <option value="H">Partial wrapping remain</option>
                      <option value="B">Bones and/or only partial remnants of wrapping remains</option>
                      <option value="U">Unknown</option>
                    </select>
                  </div>
                  
                  @* 3rd row *@
                  <div class="col-md-3">
                    <label class="form-label">South to Head</label>
                    <input type="number" class="form-control" id="inputDepth" placeholder="">
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">South to Feet</label>
                    <input type="number" class="form-control" id="inputDepth" placeholder="">
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">West to Head</label>
                    <input type="number" class="form-control" id="inputDepth" placeholder="">
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">West to Feet</label>
                    <input type="number" class="form-control" id="inputDepth" placeholder="">
                  </div>
                  
                  @* 4th row *@
                  <div class="col-md-3">
                    <label class="form-label">Sex</label>
                    <select id="inputState" class="form-select">
                      <option selected>Choose...</option>
                      <option>Female</option>
                      <option>Male</option>
                      <option>Unknown</option>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Age at Death</label>
                    <select id="inputAgeatdeath" class="form-select">
                      <option selected>Choose...</option>
                      <option value="A">Adult - years 15+</option>
                      <option value="C">Child - years 3-15</option>
                      <option value="I">Infant - years 1-3</option>
                      <option value="N">Newborn - year 0-1</option>
                      <option value="U">Unknown</option>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Adult subadult</label>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Hair Color</label>
                  </div>
                  
                  
                  @* 5th row *@
                  <div class="col-md-3">
                    <label class="form-label">Textile Color</label>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Textile Structure</label>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Textile Function</label>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Textile Decoration</label>
                  </div>
                  
                  
                  
                  
                  
                  
                  
                  <div class="col-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
          </div>
        </div>
        
      </div>  
  </div>

  
</section>

<script>
  function roundToNearestTen() {
    var input = document.querySelector("numberInput").value;
    var rounded = Math.round(input / 10) * 10;
    document.getElementById("numberInput").value = rounded;
  }
</script>

